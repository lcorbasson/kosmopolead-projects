<% if queries.empty? %>
  <p><i><%=l(:label_no_data)%></i></p>
<% else %>
  <table class="list">
  <% queries.each do |query| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td>
        <%  if query.query_type=="issue" %>
          <%= link_to_remote query.name, {:url=> project_issues_path(@project, :project_id => @project, :query_id => query),:method=>:get} %>
        <% else %>
          <%= link_to_remote query.name, {:url=>projects_queries_path(:query_id => query),:method=>:get} %>
        <% end %>
      </td>
      <td align="right">
        <small>
        <% if query.editable_by?(User.current) %>
        <%= link_to image_tag("edit.png"), {:controller => 'queries', :action => 'edit', :id => query} %>
        <%= link_to image_tag("delete.png"),  query_path(query),:method=>:delete,:confirm=>"Etes-vous certain de vouloir supprimer cette requÃªte ?" %>
        </small>
      <% end %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>



